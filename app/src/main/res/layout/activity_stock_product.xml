<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.StockProductActivity">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOCK MASUK DAN STOCK KELUAR"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/editext"
        android:backgroundTint="#05A5FB"
        android:text="Pilih Bulan dan Tahun"
        android:drawableRight="@drawable/ic_search"
        android:paddingEnd="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:drawablePadding="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_stock_masuk_bulan_tahun"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="jumlah stock masuk"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/editext"
        app:layout_constraintTop_toBottomOf="@id/btn_month"
        app:layout_constraintStart_toStartOf="@id/btn_month"
        app:layout_constraintEnd_toEndOf="@id/btn_month"/>

    <TextView
        android:id="@+id/tv_stock_masuk_tahun"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="jumlah stock masuk tahun"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/editext"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_masuk_bulan_tahun"
        app:layout_constraintStart_toStartOf="@id/btn_month"
        app:layout_constraintEnd_toEndOf="@id/btn_month"/>

    <TextView
        android:id="@+id/tv_stock_out_bulan_tahun"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="jumlah stock masuk tahun"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#FF2727"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/editext"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_masuk_tahun"
        app:layout_constraintStart_toStartOf="@id/btn_month"
        app:layout_constraintEnd_toEndOf="@id/btn_month"/>

    <TextView
        android:id="@+id/tv_stock_out_tahun"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="jumlah stock masuk tahun"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="#FF2727"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/editext"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_out_bulan_tahun"
        app:layout_constraintStart_toStartOf="@id/btn_month"
        app:layout_constraintEnd_toEndOf="@id/btn_month"/>

</androidx.constraintlayout.widget.ConstraintLayout>