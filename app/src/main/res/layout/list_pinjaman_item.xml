<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_nik"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="NIK"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="nama karyawan"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/tv_nik"
        app:layout_constraintStart_toEndOf="@id/tv_nik"/>
    <TextView
        android:id="@+id/tv_jumlah_pinjam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jumlah pinjam"
        android:layout_marginEnd="45dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/tv_nik"
        app:layout_constraintEnd_toStartOf="@id/tv_harga"/>
    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="harga"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/tv_nik"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>